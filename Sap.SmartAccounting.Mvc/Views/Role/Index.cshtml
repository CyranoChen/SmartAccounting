@model Sap.SmartAccounting.Mvc.Models.SettingModels.RoleListDto

@section Styles {
    <link rel="stylesheet" href="~/Content/DataTables/css/dataTables.bootstrap.min.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/Scripts/Datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/Datatables/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#tbl-datatable").DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true
            });
        });
    </script>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <b><i class="fa fa-user"></i> Role Management</b>
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Console</a></li>
            <li><a href="#">Setting</a></li>
            <li class="active">Role</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="tbl-datatable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Account</th>
                                    <th>Input / Output</th>
                                    <th>Operation</th>
                                </tr>
                            </thead>
                            @if (Model.Roles != null && Model.Roles.Count > 0)
                            {
                                <tbody>
                                    @foreach (var m in Model.Roles)
                                    {
                                        <tr>
                                            <td>@m.Company</td>
                                            <td>@m.Account</td>
                                            <td>@m.IsIncoming</td>
                                            <td>
                                                <button type="button" class="btn btn-danger btn-xs"
                                                        onclick="confirm('IMPORTANT: delete role id(@m.ID)?');
                                                        window.location.href = '@Url.Action("Delete", "Role", new {id = m.ID})';">
                                                    <i class="fa fa-remove"></i> delete
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
